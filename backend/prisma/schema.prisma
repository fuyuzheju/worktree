generator client {
  provider = "prisma-client-js"
//  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String             @id @default(cuid())
  name          String             @unique
  password_hash String
  history       ConfirmedHistory[] @relation("user_history")
  metadata      HistoryMetadata?   @relation("user_metadata")
}

model ConfirmedHistory {
  id           Int               @id @default(autoincrement())
  serial_num   Int
  operation    String
  history_hash String

  prev        ConfirmedHistory? @relation("history_link")
  next        ConfirmedHistory? @relation("history_link", fields: [next_id], references: [id])
  next_id     Int?             @unique // foreign key

  user        User             @relation("user_history", fields: [user_id], references: [id])
  user_id     String // foreign key

  metadata    HistoryMetadata? @relation("metadata")
}

model HistoryMetadata {
  id      Int               @id @default(autoincrement())
  head    ConfirmedHistory? @relation("metadata", fields: [head_id], references: [id])
  head_id Int?              @unique // foreign key
  user    User              @relation("user_metadata", fields: [user_id], references: [id])
  user_id String            @unique // foreign key
}
